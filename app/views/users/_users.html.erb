<% if users.any? %>
  <ul class="list-unstyled">
    <% users.each do |user| %>
      <li class="media">
        <img class="mr-2 rounded" src="<%= user.icon.thumb.url if user.icon? %>" alt="">
        <div class="media-body">
          <div>
            <p><%= link_to user.name, user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
<% end %>
<%= paginate users %>
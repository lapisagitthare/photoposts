<div class="row">
  <div class="col-md-3">
    <img class="mr-2 rounded d-inline" src="<%= user.icon.thumb.url if user.icon? %>">
    <div class="d-inline">
      <%= link_to user.name, user_path(user) %>
    </div>
  </div>
  <div class="offset-md-5 col-md-2">
    <%= render 'relationships/follow_button', user: @user %>
  </div>
  <div class="col-md-2">
    <% if current_user == user %>
      <%= link_to "登録情報変更", edit_user_path(current_user), class: 'btn btn-primary btn-block' %>
　　<% end %>
  </div>
</div>
<div>
    <ul class="nav nav-tabs nav-filldiv">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link <%= 'active' if current_page?(user_path(@user)) %>">投稿  <span class="badge badge-secondary"><%= @count_photoposts %></span></a></li>
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followings_user_path(@user)) %>">Followings  <span class="badge badge-secondary"><%= @count_followings %></span></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(followers_user_path(@user)) %>">Followers  <span class="badge badge-secondary"><%= @count_followers %></span></a></li>
      <li class="nav-item"><a href="<%= favorites_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(favorites_user_path(@user)) %>">Favorites  <span class="badge badge-secondary"><%= @count_favorites %></span></a></li>
    </ul>
</div>